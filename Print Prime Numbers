set SERVEROUTPUT on;
declare
fc NUMBER;
BEGIN 
for i in 1..1000 LOOP
    fc:=0;
FOR j in 1..i LOOP
IF MOD(i,j) =0 THEN
    fc:=fc+1;
    END IF;
end LOOP;
IF fc=2 THEN
    DBMS_OUTPUT.PUT(i);
IF i!=997 THEN
    DBMS_OUTPUT.PUT('&');
        END IF;
    END IF;
END LOOP;
    DBMS_OUTPUT.NEW_LINE();
END;
